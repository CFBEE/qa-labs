package lab3;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		// Inputs
		Utils utils = new Utils();
		// Part 1

		int number = utils.getInt("Enter a number: ");
		String text = utils.getString("Enter a string: ");

		System.out.println("You entered number: " + number);
		System.out.println("You entered string: " + text);

		System.out.println(); // Print blank line for readability

		// Part 2

		theLunchQueue();

		System.out.println(); // Print blank line for readability

		// Part 3
		// 3.1 Ask for weight in pounds and convert to Pounds and Stone

		int poundsInput = utils.getInt("Enter total weight in pounds: ");
		convertInputToStonesPounds(poundsInput);

		System.out.println();
		System.out.println(); // Print blank line for readability

		// 3.2 Ask for weight in Kg and convert to Pounds

		int kgInput = utils.getInt("Enter weight in kilograms: ");
		convertKgsToStonesPounds(kgInput);
	}

	// Methods
	// Moved to Utils.class
	/*
	 *
	 * public static int getInt(String prompt) {
	 * 
	 * Scanner s = new Scanner(System.in); System.out.printf(prompt); return
	 * s.nextInt(); }
	 * 
	 * public static String getString(String prompt) {
	 * 
	 * Scanner s = new Scanner(System.in); System.out.printf(prompt); return
	 * s.nextLine(); }
	 */

	public static void theLunchQueue() {
		Utils utils = new Utils();
		// 1. Ask for main dish
		String mainCourse = utils.getString("What main dish would you like(Fish, Burger or Veg)?: ");

		// 2. Ask for number of sides
		int potatoes = utils.getInt("How many roast potatoes would you like?: ");
		int sprouts = utils.getInt("How many Brussel Sprouts would you like?: ");

		// 3. Display order
		System.out.println("Hello your lunch is " + mainCourse + " with " + potatoes + " roast potatoes and " + sprouts
				+ " Brussel Sprouts.");
	}

	public static void convertInputToStonesPounds(int pounds) {
		int stones = pounds / 14;
		int remainingPounds = pounds % 14;
		System.out.println(pounds + " pounds = " + stones + " stones and " + remainingPounds + " pounds.");
	}

	public static void convertKgsToStonesPounds(int kg) {
		double rawPounds = kg * 2.20462;
		int totalPounds = (int) Math.round(rawPounds);
		System.out.println(
				kg + " kg = " + String.format("%.2f", rawPounds) + " pounds " + "rounded to " + totalPounds + ").");
		convertInputToStonesPounds(totalPounds);
	}

}
